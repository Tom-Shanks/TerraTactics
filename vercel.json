{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "^/assets/(.*)", "dest": "/assets/$1" },
    { "src": "^/images/(.*)", "dest": "/images/$1" },
    { "src": "^/favicon.ico", "dest": "/favicon.ico" },
    { "src": "^/robots.txt", "dest": "/robots.txt" },
    { "src": "^/(.*).png", "dest": "/$1.png" },
    { "src": "^/(.*).svg", "dest": "/$1.svg" },
    { "src": ".*", "dest": "/index.html" }
  ],
  "github": {
    "silent": true
  }
} 